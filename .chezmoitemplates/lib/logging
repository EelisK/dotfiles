#######################################
# Logging base functions
#######################################

function log_color() {
    local color_code="$1"
    shift

    printf "\033[${color_code}m%s\033[0m\n" "$*" >&2
}

function log_red() {
    log_color "0;31" "$@"
}

function log_blue() {
    log_color "0;34" "$@"
}

function log_green() {
    log_color "1;32" "$@"
}

function log_yellow() {
    log_color "1;33" "$@"
}

#######################################
# Logging level functions
#######################################

function log_debug() {
    if [[ "${DEBUG:-}" == "true" ]]; then
        log_yellow "üêõ" "$@"
    fi
}

function log_info() {
    log_blue "‚ÑπÔ∏è" "$@"
}

function log_warning() {
    log_yellow "‚ö†Ô∏è" "$@"
}

function log_error() {
    log_red "‚ùå" "$@"
}

#######################################
# Logging helper functions
#######################################

function log_task() {
    log_blue "üîÉ" "$@"
}

function log_step() {
    log_yellow "üëâ" "$@"
}

function log_done() {
    log_green "‚úÖ" "$@"
}
